<h2>Create Movie</h2>

<form action="/movie/create" method="POST">
  <label>
    title:
    <input type="text" name="title" />
  </label>

  <label>
    genre:
    <input type="text" name="genre" />
  </label>
  <label>
    plot:
    <input type="text" name="plot" />
  </label>

 
  <label>Cast:</label>
  <select name="cast" multiple>
    {{#each allTheCelebFromDB}}
      <option value="{{_id}}">{{name}}</option>
    {{/each}}
  </select>
  
  <br />
  <button type="submit"> Create </button>
</form>